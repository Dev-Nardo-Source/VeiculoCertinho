<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:VeiculoCertinho"
             xmlns:converters="clr-namespace:VeiculoCertinho.Converters"
             x:Class="VeiculoCertinho.App">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <converters:GenericConverter x:Key="InverseBoolConverter" Type="InverseBool" />
            <converters:GenericConverter x:Key="NullToBoolConverter" Type="NullToBool" />
            <converters:GenericConverter x:Key="NotNullConverter" Type="NotNull" />
            <converters:GenericConverter x:Key="ListContainsConverter" Type="ListContains" />
            <converters:GenericConverter x:Key="MultiBoolToEnabledConverter" Type="MultiBoolToEnabled" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
